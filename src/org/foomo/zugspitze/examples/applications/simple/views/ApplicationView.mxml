<?xml version="1.0" encoding="utf-8"?>
<mx:VBox
	xmlns:mx="http://www.adobe.com/2006/mxml"
	horizontalAlign="center"
	verticalAlign="middle"
	width="100%"
	height="100%"
	>
	<mx:Script>
		<![CDATA[

			//-----------------------------------------------------------------------------------------
			// ~ Includes
			//-----------------------------------------------------------------------------------------

			include 'ViewInclude.as';

		]]>
	</mx:Script>

	<mx:HBox>
		<mx:TextInput id="input" enter="this.controller.setText(this.input.text)"/>
		<mx:Button label="Submit" click="this.controller.setText(this.input.text);"/>
	</mx:HBox>

	<mx:Label text="{this.model.welcomeText}"/>
</mx:VBox>
